<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >



            <LinearLayout
                android:id="@+id/zegar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/tenMinsUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/up"/>

                    <TextView
                        android:id="@+id/tenMins"
                        android:text="@string/zero"
                        android:textSize="40sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"

                        />
                    <Button
                        android:id="@+id/tenMinsDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/down"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/minsUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/up"/>

                    <TextView
                        android:id="@+id/mins"
                        android:text="@string/zero"
                        android:textSize="40sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        />

                    <Button
                        android:id="@+id/minsDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/down"/>
                </LinearLayout>



                <TextView
                    android:text="@string/dotdot"
                    android:textSize="40sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    />



                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/tenSecsUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/up"/>

                    <TextView
                        android:id="@+id/tenSecs"
                        android:text="@string/zero"
                        android:textSize="40sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        />


                    <Button
                        android:id="@+id/tenSecsDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/down"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/secsUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/up"/>

                    <TextView
                        android:id="@+id/secs"
                        android:text="@string/zero"
                        android:textSize="40sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"

                        />
                    <Button
                        android:id="@+id/secsDown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/down"/>
                </LinearLayout>








            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">



            <Button
                android:id="@+id/buttonPause"
                android:text="@string/button_pause"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@id/buttonStart"
                android:layout_marginStart="40dp"
                />
            <Button
                android:id="@+id/buttonStart"
                android:text="@string/button_start"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                />

            <Button
                android:id="@+id/buttonStop"
                android:text="@string/button_stop"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@id/buttonStart"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                />

        </RelativeLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>